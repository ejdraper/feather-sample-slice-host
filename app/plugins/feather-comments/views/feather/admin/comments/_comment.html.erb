<tr>
	<td><%= link_to comment.name, url(:admin_comment, comment) %></td>
	<td><%= comment.website %></td>
	<td><%= comment.email_address %></td>
	<td><%= comment.ip_address %></td>
	<td><%= link_to 'Delete', url(:delete_admin_comment, comment), {:method => :delete, :onclick => "return confirm('Are you sure you want to delete this comment?')"} %></td>
	<td><%= link_to 'SPAM', url(:delete_admin_comment, comment, :spam => true), {:method => :delete, :onclick => "return confirm('Are you sure you want to delete this comment and any others like it?')"} %></td>
</tr>